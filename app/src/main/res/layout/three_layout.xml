<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context="com.yifudai.zhougonglai.materialtabtest.fgm.ThreeFragment">


    <com.rey.material.widget.EditText
        android:padding="25dp"
        android:id="@+id/potext"
        app:et_labelEnable="true"
        app:et_labelPadding="8dp"
        app:et_labelTextSize="25dp"
        app:et_helper="1000-20000元整"
        app:et_supportMode="helper"
        app:et_supportLines="1"
        app:et_supportMaxLines="1"
        app:et_dividerHeight="1dp"
        app:et_supportTextErrorColor="@color/error"
        app:et_dividerErrorColor="@color/error"
        app:et_dividerColor="@color/colorAccent"
        android:hint="借款金额"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.rey.material.widget.Button
        android:id="@+id/button"
        android:text="即刻申请"
        android:minWidth="75dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
</LinearLayout>
